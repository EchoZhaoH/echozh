{
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "noImplicitAny": true,
    "sourceMap": true,
    "target": "es5",
    "jsx": "preserve",
    "allowJs": true,
    "esModuleInterop": true,
    "jsxFactory": "React.createElement",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ],
      "@style/*": [
        "src/style/*"
      ],
      "@components/*": [
        "src/components/*"
      ]
    }
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./node-modules"
  ]
}